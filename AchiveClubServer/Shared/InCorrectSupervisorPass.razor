<MudDialog>
    <DialogContent>
        <h2>Неверный пароль тренера!</h2>
        <p>Ошибка: @Exception</p>
    </DialogContent>
    <DialogActions>
        <button id="buttonSubmit" @onclick=@Submit>Понятно</button>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    [Parameter] public string Exception { get; set; }

    void Submit() => MudDialog.Close(DialogResult.Ok(true));
}

